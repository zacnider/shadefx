{
  "name": "shadefx-backend",
  "version": "1.0.0",
  "description": "Automated backend server for ShadeFX dApp",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node services/binancePriceUpdater.ts",
    "start:executor": "ts-node services/limitOrderExecutor.ts",
    "dev": "ts-node-dev --respawn --transpile-only services/binancePriceUpdater.ts",
    "dev:executor": "ts-node-dev --respawn --transpile-only services/limitOrderExecutor.ts",
    "build": "tsc",
    "start:prod": "node dist/services/binancePriceUpdater.js",
    "start:executor:prod": "node dist/services/limitOrderExecutor.js"
  },
  "keywords": [
    "fhevm",
    "ethereum",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
